<div>
  <article class="card mb-3">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}} </h2>
      <div>
        Posted by
        {{post.user.name}}
        on
        {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.post_text}}
    </div>
  </article>

  {{#if post.comments}}
    <section class="card mb-3">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">

        {{#each post.comments}}
          <div>
            <p>
              {{comment_text}}
            </p>
            <p>
              {{user.name}},

              <span>{{format_date createdAt}}</span>
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  {{!-- {{#if logged_in}} --}}
  <form class="comment-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <div>
      <textarea class="mb-3 w-100" name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit" class="btn btn-secondary btn-inline">Add Comment</button>
    </div>
  </form>
  {{!-- {{else}}
    <p>Log in to add comments.</p>
  {{/if}} --}}
</div>

<script src="/js/comment.js"></script>