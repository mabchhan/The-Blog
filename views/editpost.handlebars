<section>
  <div class="card">
    <div class="card-header">
      <h2>Edit Post</h2>
    </div>

    <form id="edit-post-form" class="card-body">

      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="mb-3 form-outline">
        <label class="form-label" for="post-title">Title</label>
        <input
          type="text"
          name="post-title"
          value="{{post.title}}"
          class="form-control w-50"
        />
      </div>

      <div class="mb-3 form-outline">
        <label class="form-label" for="post-text">Content</label>
        <textarea
          name="post-text"
          class="form-control w-50 h-30"
        >{{post.post_text}}</textarea>
      </div>

      <div>
        <button type="submit" class="btn mr-5">Update</button>
        <button type="button" id="delete-btn" class="btn">Delete</button>
      </div>

    </form>
  </div>
</section>

<script src="/js/editpost.js"></script>
<script src="/js/delete.js"></script>